<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/value_10dp"
    tools:context=".view.fragment.BloodAndPlasmaDetailsFragment">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="@dimen/value_20dp"
        android:layout_centerHorizontal="true"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/profile"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"/>

    <TextView
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_17sp"
        android:layout_marginTop="@dimen/value_10dp"
        android:layout_below="@+id/profile_image"
        android:text="User Name"
        android:layout_centerHorizontal="true"
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/value_20dp"
        android:id="@+id/comment"
        android:textColor="@color/ash_color1"
        android:textStyle="normal"
        android:textSize="@dimen/text_size_14sp"
        android:layout_below="@+id/user_name"
        android:text="Message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/llMessage"
        android:layout_marginTop="@dimen/value_10dp"
        android:layout_below="@+id/comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/backgrpund_border"
        android:elevation="@dimen/value_5dp"
        android:orientation="vertical"
        android:paddingStart="@dimen/value_10dp"
        android:paddingTop="@dimen/value_10dp"
        android:paddingEnd="@dimen/value_10dp"
        android:paddingBottom="@dimen/value_10dp">

        <TextView
            android:id="@+id/msg"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:textSize="@dimen/text_size_14sp"
            android:text="I want to donate plasma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>
    <TextView
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/value_20dp"
        android:id="@+id/details"
        android:textColor="@color/ash_color1"
        android:textStyle="normal"
        android:textSize="@dimen/text_size_14sp"
        android:layout_below="@+id/llMessage"
        android:text="User Details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginTop="@dimen/value_10dp"
        android:layout_below="@+id/details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/backgrpund_border"
        android:elevation="@dimen/value_5dp"
        android:orientation="vertical"
        android:paddingStart="@dimen/value_10dp"
        android:paddingTop="@dimen/value_10dp"
        android:paddingEnd="@dimen/value_10dp"
        android:paddingBottom="@dimen/value_10dp">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/value_5dp">

        <TextView
            android:textSize="@dimen/text_size_10sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Name"
            android:textColor="@color/black" />

        <TextView
            android:textSize="@dimen/text_size_10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/firstName"
            android:textSize="@dimen/text_size_10sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginStart="@dimen/value_10dp"
            android:layout_marginEnd="@dimen/value_10dp"
            android:layout_weight="2"
            android:gravity="left"
            android:paddingBottom="@dimen/value_3dp"
            android:text="Zahid-ul_Islam"
            android:textColor="@color/black" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/value_5dp">

            <TextView
                android:textSize="@dimen/text_size_10sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Blood Group"
                android:textColor="@color/black" />

            <TextView
                android:textSize="@dimen/text_size_10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="@color/black" />

            <TextView
                android:textSize="@dimen/text_size_10sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginStart="@dimen/value_10dp"
                android:layout_marginEnd="@dimen/value_10dp"
                android:layout_weight="2"
                android:gravity="left"
                android:paddingBottom="@dimen/value_3dp"
                android:text="A+"
                android:textColor="@color/black" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/value_5dp">

            <TextView
                android:textSize="@dimen/text_size_10sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Age"
                android:textColor="@color/black" />

            <TextView
                android:textSize="@dimen/text_size_10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="@color/black" />

            <TextView
                android:textSize="@dimen/text_size_10sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginStart="@dimen/value_10dp"
                android:layout_marginEnd="@dimen/value_10dp"
                android:layout_weight="2"
                android:gravity="left"
                android:paddingBottom="@dimen/value_3dp"
                android:text="27"
                android:textColor="@color/black" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/value_5dp">

            <TextView
                android:textSize="@dimen/text_size_10sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Phone Number"
                android:textColor="@color/black" />

            <TextView
                android:textSize="@dimen/text_size_10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="@color/black" />

            <TextView
                android:textSize="@dimen/text_size_10sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginStart="@dimen/value_10dp"
                android:layout_marginEnd="@dimen/value_10dp"
                android:layout_weight="2"
                android:gravity="left"
                android:paddingBottom="@dimen/value_3dp"
                android:text="01777383838"
                android:textColor="@color/black" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/value_5dp">

            <TextView
                android:textSize="@dimen/text_size_10sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Address"
                android:textColor="@color/black" />

            <TextView
                android:textSize="@dimen/text_size_10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="@color/black" />

            <TextView
                android:textSize="@dimen/text_size_10sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginStart="@dimen/value_10dp"
                android:layout_marginEnd="@dimen/value_10dp"
                android:layout_weight="2"
                android:gravity="left"
                android:paddingBottom="@dimen/value_3dp"
                android:text="Mirpur 12"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>