<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/value_2dp"
    android:layout_marginRight="@dimen/value_2dp"
    android:layout_marginLeft="@dimen/value_2dp"
    android:orientation="vertical"
    android:minHeight="?android:attr/listPreferredItemHeightSmall">

    <LinearLayout
        android:id="@+id/pickupLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivHomeId2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/tvHomeId2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:text="My Account"
            android:textAllCaps="true"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="12sp"/>
    </LinearLayout>

    <View
        android:id="@+id/viewLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/value_3dp"
        android:layout_marginLeft="@dimen/value_50dp"
        android:layout_marginRight="@dimen/value_3dp"
        android:background="#b2beb5"/>

</LinearLayout>